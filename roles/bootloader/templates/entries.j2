{% if hardened is defined %}
menuentry "Arch Hardened" {
    {{ if bootloader.theme_path is defined }}
    icon     /EFI/refind/{{ bootloader.theme_path }}/icons/128-48/os_arch_hardened.png
    {{ endif }}
    ostype   Linux
    volume   "Arch Linux"
    loader   /vmlinuz-linux-hardened
    initrd   /initramfs-linux-hardened.img
    options  "root=/dev/mapper/system rootflags=rw,subvol=root rw {% if 'AuthenticAMD' in ansible_processor %}initrd=amd-ucode.img{% elif 'GenuineIntel' in ansible_processor %}initrd=amd-ucode.img{% endif %} libahci.ignore_sss=1 {% if bootloader.silent %}vga=current quiet splash loglevel=3 rd.systemd.show_status=auto rd.udev.log_priority=3{% endif %} {{ bootloader.kernel_parameters }}"
    submenuentry "Boot using fallback initramfs" {
        initrd /initramfs-linux-hardened-fallback.img
    }
    submenuentry "Boot to terminal" {
        add_options "systemd.unit=multi-user.target"
    }
}
{% endif %}

